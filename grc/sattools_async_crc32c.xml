<?xml version="1.0"?>
<block>
  <name>Async CRC32-Castagnoli</name>
  <key>sattools_async_crc32c</key>
  <category>[sattools]</category>
  <import>import sattools</import>
  <make>sattools.async_crc32c()</make>

  <param>
    <name>Mode</name>
    <key>check</key>
    <type>enum</type>
    <option>
      <name>Generate CRC</name>
      <key>False</key>
    </option>
    <option>
      <name>Check CRC</name>
      <key>True</key>
    </option>
  </param>

  <sink>
    <name>in</name>
    <type>message</type>
  </sink>

  <source>
    <name>out</name>
    <type>message</type>
    <optional>1</optional>
  </source>

</block>
